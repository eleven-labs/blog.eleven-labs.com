@import 'settings/variables';
@import 'settings/functions';

.header {
  background: url('{{ site.baseurl_root | append: "/img/astronaut_mobile.png"  }}');
  background-position: left top;
  background-repeat: no-repeat;
  background-color: $bright-sun;
  background-size: auto em(190px);
  display: flex;
  flex-direction: column;
  height: em(240px);
  width: 100%;

  @media(min-width: $breakpoint-large) {
    background: url('{{ site.baseurl_root | append: "/img/astronaut_desktop.png"  }}') 100% 100% no-repeat,
    url('{{ site.baseurl_root | append: "/img/halo.png"  }}') 100% 100% no-repeat,
    url('{{ site.baseurl_root | append: "/img/planet.png"  }}') 120% 120% no-repeat,
    $bright-sun;
    background-position: 24.8% em(80px), center, right em(105px);
    background-size: auto em(150px), auto 100%;
    height: em(230px);
  }

  &-links {
    display: flex;
    flex-direction: row;
    height: em(180px);
    width: 100%;

    @media(min-width: $breakpoint-large) {
      height: em(170px);
    }

    &__logo-eleven {
      display: none;

      @media(min-width: $breakpoint-large) {
        color: $white;
        display: flex;
        height: em(40px);
        margin: em(30px) 0 0 em(38px);
        width: em(40px);
      }
    }

    &__logo-blog {
      display: none;

      @media(min-width: $breakpoint-large) {
        display: flex;
        font-family: $font-family-language-switch;
        font-weight: 400;
        margin: em(40px) 0 0 em(40px);
      }
    }

    &__title {
      color: $white;
      left: 50%;
      margin-top: em(90px);
      position: absolute;
      text-align: center;
      text-decoration: none;
      transform: translate(-50%, 0);

      @media(min-width: $breakpoint-large) {
        margin-top: em(90px);
      }
    }

    &__eleven {
      font-family: $font-family-header-big-text;
      font-size: 3rem;
      font-weight: 400;
      letter-spacing: 4px;

      @media(min-width: $breakpoint-large) {
        font-size: 4rem;
      }
    }

    &__blog {
      font-family: $font-family-title-blog;
      font-size: 2.8rem;
      font-weight: 700;
      line-height: 1.2;

      @media(min-width: $breakpoint-large) {
        font-size: 3.4rem;
      }
    }

    &__site-eleven {
      color: $white;
      font-size: em(24px);
      height: 80px;
      margin: em(7px) em(10px) 0 auto;
      text-align: right;
      text-decoration: none;

      @media(min-width: $breakpoint-large) {
        font-size: em(24px);
        margin: em(25px) em(43px) 0 auto;
      }
    }

    &__blocklogo {
      display: flex;
      flex-direction: row;
    }

    &__grouplogo {
      height: em(30px);
      margin-bottom: em(3px);
      margin-left: em(16px);
      width: em(30px);

      @media(min-width: $breakpoint-large) {
        margin: 0;
      }
    }

    &__sitetitle {
      display: none;

      @media(min-width: $breakpoint-large) {
        display: block;
        font-family: $font-family-header-big-text;
        font-size: 3.1rem;
        font-weight: 300;
        letter-spacing: 7px;
        line-height: 1.2;
        margin: em(2px) -7px auto em(10px);
      }
    }

    &__lesite {
      font-family: $font-family-title-blog;
      font-size: 1.5rem;
      font-weight: 700;

      @media(min-width: $breakpoint-large) {
        font-size: 2.5rem;
      }
    }
  }
}

.header-bottom {
  align-items: center;
  display: flex;
  flex-direction: row;
  height: em(60px);
  justify-content: flex-end;
  width: 100%;

  @media(min-width: $breakpoint-large) {
    height: em(85px);
  }

  &__social {
    display: flex;
    flex-direction: row;
    list-style: none;
    margin: 0 em(5px) 0 0;

    &__icon {
      margin-left: em(8px);
    }

    &__link,
    &__link:visited {
      color: $white;
    }

    @media(min-width: $breakpoint-large) {
      margin: em(-10px) em(30px) 0 0;

      &__icon {
        height: em(20px);
        margin-left: em(35px);
        width: em(10px);
      }
    }
  }

  &__langs {
    font-family: $font-family-language-switch;
    font-size: em(24px);
    font-weight: 400;
    margin: em(20px) em(16px) em(20px) 0;
    text-transform: capitalize;

    @media(min-width: $breakpoint-large) {
      margin: 0 em(45px) 0 em(19px);
    }

    &__link,
    &__link:visited {
      color: $white;
      text-decoration: none;
    }
  }

  &__search-icon {
    margin: em(20px) em(19px) em(20px) auto;

    @media(min-width: $breakpoint-large) {
      cursor: pointer;
      display: flex;
      flex-direction: row;
      margin: 0 em(20px);
      text-decoration: none;
    }
  }

  &__search-label {
    display: none;

    &:visited {
      color: $white;
    }

    @media(min-width: $breakpoint-large) {
      color: $white;
      display: block;
      font-family: $font-family-language-switch;
      font-size: em(24px);
      font-weight: 400;
      line-height: .7;
      margin-right: em(10px);
    }
  }

  &__headband {

    &--not-displayed {
      display: none;
    }

    &--displayed {
      color: $dusty-grey;
      display: block;
      height: em(50px);
      line-height: 2.5;
      margin: em(5px) 0 0;
      position: absolute;
      width: 100%;

      @media(min-width: $breakpoint-large) {
        height: em(55px);
        margin: em(16px) auto auto 0;
      }
    }
  }

  &__close-search {
    color: $white;
    float: right;
    height: 20px;
    margin: em(-40px) em(20px);
    width: 20px;

    &:hover {
      background: transparent;
    }

    @media(min-width: $breakpoint-large) {
      color: $white;
      float: right;
      height: 25px;
      margin: em(-35px) em(20px);
      width: 25px;
    }
  }
}
