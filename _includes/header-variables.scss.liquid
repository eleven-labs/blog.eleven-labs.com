@import 'settings/variables';
@import 'settings/functions';

.header {
  background: url('{{ site.baseurl | append: "/img/astronaut_mobile.png"  }}');
  background-position: left top;
  background-repeat: no-repeat;
  background-color: $background-yellow;
  background-size: auto em(190px);
  display: flex;
  flex-direction: column;
  height: em(240px);
  width: 100%;

  @media(min-width: $breakpoint-large) {
    background: url('{{ site.baseurl | append: "/img/astronaut_desktop.png"  }}') 100% 100% no-repeat,
    url('{{ site.baseurl | append: "/img/halo.png"  }}') 100% 100% no-repeat,
    url('{{ site.baseurl | append: "/img/planet.png"  }}') 120% 120% no-repeat,
    $background-yellow;
    background-position: 24.8% em(80px), center, right em(105px);
    background-size: auto em(150px), auto 100%;
    height: em(230px);
  }

  &-links {
    display: flex;
    flex-direction: row;
    height: em(180px);
    width: 100%;

    @media(min-width: $breakpoint-large) {
      height: em(170px);
    }

    &__logo-eleven {
      display: none;

      @media(min-width: $breakpoint-large) {
        display: flex;
        margin: em(30px) 0 0 em(50px);
      }
    }

    &__logo-blog {
      display: none;

      @media(min-width: $breakpoint-large) {
        display: flex;
        font-family: $language-switch;
        margin: em(40px) 0 0 em(40px);
      }
    }

    &__title {
      left: 50%;
      margin-top: em(70px);
      position: absolute;
      transform: translate(-50%, 0);

      @media(min-width: $breakpoint-large) {
        margin-top: em(90px);
      }
    }
    
    &__site-eleven {
      color: $white;
      text-decoration: none;
      font-size: em(24px);
      margin: em(1px) em(10px) 0 auto;

      @media(min-width: $breakpoint-large) {
        display: block;
        font-size: em(24px);
        margin: em(30px) em(43px) 0 auto;
      }
    }
  }
}

.header-bottom {
  align-items: center;
  display: flex;
  flex-direction: row;
  height: em(60px);
  justify-content: flex-end;
  width: 100%;

  @media(min-width: $breakpoint-large) {
    height: em(85px);
  }

  &__social {
    display: none;

    @media(min-width: $breakpoint-large) {
      display: flex;
      flex-direction: row;
      list-style: none;
      margin: em(-10px) em(30px) 0 0;

      &__icon {
        height: em(20px);
        margin-left: em(35px);
        width: em(10px);
      }

      &__link,
      &__link:visited {
        color: $white;
        height: 100%;
        width: 100%;
      }
    }
  }

  &__langs {
    font-family: $language-switch;
    font-size: em(24px);
    margin: em(20px) em(16px) em(20px) 0;
    text-transform: capitalize;

    @media(min-width: $breakpoint-large) {
      margin: 0 em(45px) 0 em(19px);
    }

    &__link,
    &__link:visited {
      color: $white;
      text-decoration: none;
    }
  }

  &__search-icon {
    margin: em(20px) em(19px) em(20px) auto;

    @media(min-width: $breakpoint-medium) {
      margin: em(20px) em(19px) em(20px) auto;
    }

    @media(min-width: $breakpoint-large) {
      cursor: pointer;
      display: flex;
      flex-direction: row;
      margin: 0 em(20px);
      text-decoration: none;
    }
  }

  &__search-label {
    display: none;

    &:visited {
      color: $white;
    }

    @media(min-width: $breakpoint-large) {
      color: $white;
      display: block;
      font-family: $language-switch;
      font-size: em(24px);
      line-height: .7;
      margin-right: em(10px);
    }
  }

  &__headband {

    &--not-displayed {
      display: none;
    }

    &--displayed {
      color: $dusty-gray;
      display: block;
      height: em(50px);
      line-height: 2.5;
      margin: em(5px) 0 0;
      position: absolute;
      width: 100%;

      @media(min-width: $breakpoint-large) {
        height: em(55px);
        margin: em(16px) auto auto 0;
      }
    }
  }

  &__close-search {
    color: $white;
    float: right;
    height: em(20px);
    margin-top: em(-35px);
    width: em(50px);

    &:hover {
      background: transparent;
    }

    @media(min-width: $breakpoint-large) {
      color: $white;
      float: right;
      height: em(25px);
      margin-top: em(-50px);
      width: em(100px);
    }
  }
}
