@import 'settings/variables';
@import 'settings/functions';

.header {
  background-repeat: no-repeat;
  background-color: $bright-blue;
  background-size: auto em(190px);
  display: flex;
  flex-direction: row;
  height: 90px;
  width: 100%;

  @media(min-width: $breakpoint-large) {
    background-repeat: no-repeat;
    background-color: $bright-blue;
    background-size: auto em(190px);
    display: flex;
    flex-direction: row;
    height: em(250px);
    width: 100%;
  }

  &-text {
    display: flex;
    flex-direction: column;
    padding-left: 244px;
    padding-top: 29px;
    height: 158px;
    border-top: 1px solid $white;
    color: $white;
    margin-top: 95px;
    position: relative;
    width: 100%;

    @media(max-width: $breakpoint-large) {
      display: none;
    }

    &__title {
      font-family: $font-family-main;
      font-style: normal;
      font-weight: normal;
      font-size: 24px;
      line-height: 28px;
      top: 10px;
      width: 100%;
    }

    &__content {
      font-family: $font-family-main;
      font-style: normal;
      font-weight: bold;
      font-size: 32px;
      line-height: 125.5%;
      top: 53px;
      width: 100%;
    }
  }

  &-links {
    display: flex;
    flex-direction: row;
    height: em(180px);
    width: 60%;
    color: $white;
    left: 30%;
    position: absolute;
    text-align: center;
    text-decoration: none;
    transform: translate(-50%, 0);

    &__search-icon {
      color: $white;
      display: none;
      height: em(40px);
      margin: 28px 0 0 340px;
      width: em(40px);
    }

    &__back-icon {
      color: $white;
      display: none;
      height: em(45px);
      margin: 36px 0 0 30px;
      width: em(44px);
    }

    &__logo-eleven {
      color: $white;
      display: flex;
      height: em(40px);
      margin: em(30px) 0 0 em(38px);
      width: em(35px);

      @media(min-width: $breakpoint-large) {
        color: $white;
        display: flex;
        height: em(45px);
        margin: em(30px) 0 0 em(38px);
        width: em(43px);
      }
    }

    &__title {
      color: $white;
      position: absolute;
      text-decoration: none;
      transform: translate(-50%, 0);
      text-align: left;
      height: em(40px);
      margin: em(30px) 0 0 em(160px);
      width: em(130px);
    }

    &__brand {
      color: $white;
      text-decoration: none;
      transform: translate(-50%, 0);
    }

    &__blog {
      color: $white;
      font-weight: bold;
      text-decoration: none;
      transform: translate(-50%, 0);
    }
  }
}

.header-bottom {
  align-items: center;
  display: flex;
  flex-direction: row;
  height: em(60px);
  justify-content: flex-end;
  width: 100%;

  @media(min-width: $breakpoint-large) {
    height: em(85px);
  }

  &__social {
    display: flex;
    flex-direction: row;
    list-style: none;
    margin: 0 em(5px) 0 0;

    &__icon {
      margin-left: em(8px);
    }

    &__link,
    &__link:visited {
      color: $white;
    }

    @media(min-width: $breakpoint-large) {
      margin: em(-10px) em(30px) 0 0;

      &__icon {
        height: em(20px);
        margin-left: em(35px);
        width: em(10px);
      }
    }
  }

  &__langs {
    font-family: $font-family-language-switch;
    font-size: em(24px);
    font-weight: 400;
    margin: em(20px) em(16px) em(20px) 0;
    text-transform: capitalize;

    @media(min-width: $breakpoint-large) {
      margin: 0 em(45px) 0 em(19px);
    }

    &__link,
    &__link:visited {
      color: $white;
      text-decoration: none;
    }
  }

}
