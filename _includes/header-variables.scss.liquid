@import 'settings/variables';
@import 'settings/functions';

.header {
  background-repeat: no-repeat;
  background-color: $bright-blue;
  background-size: auto em(190px);
  display: flex;
  flex-direction: row;
  height: em(250px);
  width: 100%;

  @media(min-width: $breakpoint-large) {
    background-color: $bright-blue;
    background-position: 24.8% em(80px), center, right em(105px);
    background-size: auto em(150px), auto 100%;
    height: em(230px);
  }

  &-text {
    height: 158px;
    border-top: 1px solid $white;
    color: $white;
    position: relative;
    margin-top: 95px;
    width: 100%;

    &__title {
      font-family: WorkSans;
      font-style: normal;
      font-weight: normal;
      font-size: 24px;
      line-height: 28px;
      position: relative;
      width: 100%;
      left: 20%;
      top: 10px;
    }

    &__content {
      font-family: WorkSans;
      font-style: normal;
      font-weight: bold;
      font-size: 32px;
      line-height: 125.5%;
      position: relative;
      width: 100%;
      left: 8%;
      top: 53px;
    }
  }

  &-links {
    display: flex;
    flex-direction: row;
    height: em(180px);
    width: 60%;
    color: $white;
    left: 30%;
    position: absolute;
    text-align: center;
    text-decoration: none;
    transform: translate(-50%, 0);

    @media(min-width: $breakpoint-large) {
      height: em(170px);
    }

    &__logo-eleven {
      color: $white;
      display: flex;
      height: em(40px);
      margin: em(30px) 0 0 em(38px);
      width: em(40px);
    }

    &__title {
      color: $white;
      position: absolute;
      text-align: center;
      text-decoration: none;
      transform: translate(-50%, 0);
      text-align: left;
      height: em(40px);
      margin: em(30px) 0 0 em(160px);
      width: em(130px);
    }
  }
}

.header-bottom {
  align-items: center;
  display: flex;
  flex-direction: row;
  height: em(60px);
  justify-content: flex-end;
  width: 100%;

  @media(min-width: $breakpoint-large) {
    height: em(85px);
  }

  &__social {
    display: flex;
    flex-direction: row;
    list-style: none;
    margin: 0 em(5px) 0 0;

    &__icon {
      margin-left: em(8px);
    }

    &__link,
    &__link:visited {
      color: $white;
    }

    @media(min-width: $breakpoint-large) {
      margin: em(-10px) em(30px) 0 0;

      &__icon {
        height: em(20px);
        margin-left: em(35px);
        width: em(10px);
      }
    }
  }

  &__langs {
    font-family: $font-family-language-switch;
    font-size: em(24px);
    font-weight: 400;
    margin: em(20px) em(16px) em(20px) 0;
    text-transform: capitalize;

    @media(min-width: $breakpoint-large) {
      margin: 0 em(45px) 0 em(19px);
    }

    &__link,
    &__link:visited {
      color: $white;
      text-decoration: none;
    }
  }

  &__search-icon {
    margin: em(20px) em(19px) em(20px) auto;

    @media(min-width: $breakpoint-large) {
      cursor: pointer;
      display: flex;
      flex-direction: row;
      margin: 0 em(20px);
      text-decoration: none;
    }
  }

  &__search-label {
    display: none;

    &:visited {
      color: $white;
    }

    @media(min-width: $breakpoint-large) {
      color: $white;
      display: block;
      font-family: $font-family-language-switch;
      font-size: em(24px);
      font-weight: 400;
      line-height: .7;
      margin-right: em(10px);
    }
  }

  &__headband {

    &--not-displayed {
      display: none;
    }

    &--displayed {
      color: $dusty-grey;
      display: block;
      height: em(50px);
      line-height: 2.5;
      margin: em(5px) 0 0;
      position: absolute;
      width: 100%;

      @media(min-width: $breakpoint-large) {
        height: em(55px);
        margin: em(16px) auto auto 0;
      }
    }
  }

  &__close-search {
    color: $white;
    float: right;
    height: 20px;
    margin: em(-40px) em(20px);
    width: 20px;

    &:hover {
      background: transparent;
    }

    @media(min-width: $breakpoint-large) {
      color: $white;
      float: right;
      height: 25px;
      margin: em(-35px) em(20px);
      width: 25px;
    }
  }
}
